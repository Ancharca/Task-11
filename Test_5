public static void testxplus1() {
    int x = 0;

    // В следующих строках должен поменять на x++
    x = x + 1;
    for (x = x + 1; x < 4; x = x + 1) {
    }
    int y = (x = x + 1); //x++
    if ((x = x + 1) == 1) {
    }
    //-------------------------------

    int a = 0;
    // А в следующих не должен т.к. код станет не выполняемым
    a = a + 1 + 3;
    for (a = a + 1 + 3; a < 7; a = a + 1 + 3) {
    }
    //-------------------------------

    // А тут должен т.к. код останется корректным, но, возможно, это слишком сложные случаи
    int b = (a = a + 1 + 3);  // строка int b = (a++ + 3); корректна
    if ((a = a + 1 + 3) == 1) { // строка if ((a++ + 3) == 1) { корректна
    }
    //-------------------------------
    int x = x + 1;
    x = x +1;
}